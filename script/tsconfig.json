{
  "include": [
    "./**/*.ts",
    "eslint.config.mjs"
  ],
  "compilerOptions": {
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ESNext",
    "lib": [ "ESNext" ],
    "noEmit": true,
    "allowJs": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictBindCallApply": true,
    "strictPropertyInitialization": true,
    "verbatimModuleSyntax": true,
  }
}